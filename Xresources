! XTerm solarized colors, because XTerm lacks true color
#define X_base03  rgb:1c/1c/1c
#define X_base02  rgb:26/26/26
#define X_base01  rgb:58/58/58
#define X_base00  rgb:62/62/62
#define X_base0   rgb:80/80/80
#define X_base1   rgb:8a/8a/8a
#define X_base2   rgb:e4/e4/e4
#define X_base3   rgb:ff/ff/d7
#define X_yellow  rgb:af/87/00
#define X_orange  rgb:d7/5f/00
#define X_red     rgb:d7/00/00
#define X_magenta rgb:af/00/5f
#define X_violet  rgb:5f/5f/af
#define X_blue    rgb:00/87/ff
#define X_cyan    rgb:00/af/af
#define X_green   rgb:5f/87/00

